<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            inputmode="search"
            label="COM_JLCONTENTFIELDSFILTER_FILTER_SEARCH_LABEL"
            description="COM_JLCONTENTFIELDSFILTER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />

        <field
            name="state"
            type="list"
            label="JOPTION_SELECT_PUBLISHED"
            default=""
            onchange="this.form.submit();"
            >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
            name="category_id"
            type="category"
            extension="com_content"
            label="JCATEGORY"
            description="COM_JLCONTENTFIELDSFILTER_FILTER_CATEGORY_DESC"
            multiple="false"
            onchange="this.form.submit();"
            >
            <option value="">JOPTION_SELECT_CATEGORY</option>
        </field>

        <field
            name="extension"
            type="list"
            label="COM_JLCONTENTFIELDSFILTER_HEADING_EXTENSION"
            description="COM_JLCONTENTFIELDSFILTER_FILTER_EXTENSION_DESC"
            onchange="this.form.submit();"
            >
            <option value="">COM_JLCONTENTFIELDSFILTER_SELECT_EXTENSION</option>
            <option value="com_content">com_content</option>
            <option value="com_contact">com_contact</option>
            <option value="com_tags">com_tags</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="COM_JLCONTENTFIELDSFILTER_LIST_FULL_ORDERING"
            default="a.id DESC"
            onchange="this.form.submit();"
            >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="a.meta_title ASC">COM_JLCONTENTFIELDSFILTER_HEADING_TITLE_ASC</option>
            <option value="a.meta_title DESC">COM_JLCONTENTFIELDSFILTER_HEADING_TITLE_DESC</option>
            <option value="a.state ASC">JSTATUS_ASC</option>
            <option value="a.state DESC">JSTATUS_DESC</option>
            <option value="category_extension ASC">COM_JLCONTENTFIELDSFILTER_HEADING_EXTENSION_ASC</option>
            <option value="category_extension DESC">COM_JLCONTENTFIELDSFILTER_HEADING_EXTENSION_DESC</option>
            <option value="category_title ASC">JCATEGORY_ASC</option>
            <option value="category_title DESC">JCATEGORY_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="COM_JLCONTENTFIELDSFILTER_LIST_LIMIT"
            description="COM_JLCONTENTFIELDSFILTER_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>
